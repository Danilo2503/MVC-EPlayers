@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<form class="cadastro" action='@Url.Action("Cadastrar")' method="POST" enctype="multipart/form-data">

    <div class="campo">
        <label for="IdEquipe">IDEquipe</label>
        <input type="text" name="IdEquipe" id="IdEquipe"/>
    </div>

    <div class="class">
        <label for="Nome">Nome</label>
        <input type="text" name="Nome" id="Nome"/>
    </div>

    <div class="class">
        <label for="Imagem">Imagem</label>
        <input type="file" name="Imagem" id="Imagem"/>
    </div>

    <button class="gradient btn">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
           <tr>
               <td>@equipe.IdEquipe</td>
               <td>@equipe.Nome</td>
               <td><img src="img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width=40></td>
               <td><a asp-area="Link para excluir uma equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a></td>
           </tr> 
        }
    </tbody>
</table>